@model AppData.ViewModels.Accounts.AdSignUpViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<p class="text-center h1 fw-bold mx-1 mx-md-4 mt-4">Create account</p>
<div class="card-body p-md-5">
    <div class="">
        <form  method="post" asp-action="SignUp" class="mx-1 mx-md-4">
            <div class="row">
            <div class="col-6">
                <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fa fa-user fa-lg me-3 fa-fw mr-2"></i>
                    <div class="form-outline flex-fill mb-0">
                        <input asp-for="UserName" type="text" id="form3Example1c" placeholder="User Name" class="form-control"/>
                    </div>
                </div>
                <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fa fa-user fa-lg me-3 fa-fw mr-2"></i>
                    <div class="form-outline flex-fill mb-0">
                        <input type="text" asp-for="FullName" id="form3Example1c" placeholder="Your Name" class="form-control"/>
                    </div>
                </div>

                <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fa fa-envelope fa-lg me-3 fa-fw mr-2"></i>
                    <div class="form-outline flex-fill mb-0">
                        <input type="email" asp-for="Email" placeholder="Your Email" id="form3Example3c" class="form-control"/>

                    </div>
                </div>
                <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fa fa-phone fa-lg me-3 fa-fw mr-2"></i>
                    <div class="form-outline flex-fill mb-0">
                        <input type="text" asp-for="PhoneNumber" id="form3Example1c" placeholder="Your Phone" class="form-control"/>

                    </div>
                </div>
                <div class="d-flex flex-row align-items-center mb-4">
                        <i class="fa fa-map-marker fa-lg me-3 fa-fw mr-2"></i>
                    <div class="form-outline flex-fill mb-0">
                        <input type="text" asp-for="Address" id="form3Example1c" placeholder="Your Address" class="form-control"/>

                    </div>
                </div>

                <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fa fa-lock fa-lg me-3 fa-fw mr-2"></i>
                    <div class="form-outline flex-fill mb-0">
                        <input type="password" asp-for="Password" id="form3Example4c" placeholder="Password" class="form-control"/>

                    </div>
                </div>

            </div>
                <div class="col-6">
                    <div class="d-flex flex-row align-items-center mb-4">
                        <i class="fa fa-id-card fa-lg me-3 fa-fw mr-2"></i>
                        <div class="form-outline flex-fill mb-0">
                            <input type="text" id="form3Example4c" asp-for="CitizenId" placeholder="CitizenId" class="form-control"/>
                        </div>
                    </div>
                    <div class="d-flex flex-row align-items-center mb-4">
                        <i class="fa fa-server fa-lg me-3 fa-fw mr-2"></i>
                        <div class="form-outline flex-fill mb-0">
                            <select asp-for="Role" class="form-select form-control" aria-label="Default select example">
                                <option selected>-- Chức vụ --</option>
                                <option value="Admin">Admin</option>
                                <option value="Staff">Nhân viên</option>    
                            </select>
                        </div>
                    </div>
                    
                </div>
                
            </div>
            <div class="d-flex justify-content-center mx-4 mb-lg-4">
                <button type="submit" class="btn btn-primary btn-lg">Register</button>
            </div>
        </form>
    </div>
</div>